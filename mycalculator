    #result {
      width: 100%;
      height: 40px;
      margin-bottom: 10px;
      font-size: 1.2em;
      text-align: right;
      padding: 8px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .btn {
      width: 48px;
      height: 48px;
      margin: 4px;
      font-size: 1.1em;
      cursor: pointer;
      border-radius: 4px;
      border: 1px solid #eee;
      background: #f0f0f0;
      transition: background 0.2s;
    }
    .btn:hover {
      background: #dceaff;
